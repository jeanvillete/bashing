#!/bin/bash

# a simple guessing game

# get a random number < 100
target=$(($RANDOM % 100))

# initialize the user's guess
guess=

until [[ $guess -eq $target ]]; do
	read -p "Take a guess: " guess
	if [[ $guess -lt $target ]]; then
		echo "Higher!";
	elif [[ $guess -gt $target ]]; then
		echo "Lower!"
	else
		echo "You found it!"
	fi
done

exit 0
